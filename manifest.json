{
  "manifest_version": 3,
  "name": "Misintel - AI Fact Checker",
  "version": "1.0",
  "description": "Right-click any text to fact-check instantly with AI",
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": {
      "16": "public/logo.png",
      "48": "public/logo.png",
      "128": "public/logo.png"
    }
  },
  "background": {
    "service_worker": "public/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["public/content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "sidePanel",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*/*"
  ],
  "icons": {
    "16": "public/logo.png",
    "48": "public/logo.png",
    "128": "public/logo.png"
  },
  "side_panel": {
    "default_path": "public/popup.html"
  }
}